#!/usr/bin/env ruby

# bundler binstub
# 'bundle exec ...' has a file descriptor closing bug in 1.3.5
# this makes unicorn restart not work, binstub has no such problem
# https://github.com/bundler/bundler/issues/2628

require 'pathname'
ENV['BUNDLE_GEMFILE'] ||= File.expand_path("../../../Gemfile",
  Pathname.new(__FILE__).realpath)

require 'rubygems'
require 'bundler/setup'

load Gem.bin_path('unicorn', 'unicorn')
